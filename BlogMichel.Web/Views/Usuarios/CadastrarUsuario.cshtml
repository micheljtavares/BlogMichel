@model BlogMichel.Web.Models.Usuario.CadastrarUsuarioViewModel
@{
    ViewBag.Title = "CadastrarUsuario";
}
@using (@Html.BeginForm())
{
    <h2>CadastrarUsuario</h2>
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(x => x.Login)
        @Html.TextBoxFor(x => x.Login, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Nome)
        @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Senha)
        @Html.TextBoxFor(x => x.Senha, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    <p>
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </p>
}